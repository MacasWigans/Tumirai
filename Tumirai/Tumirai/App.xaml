<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:Tumirai"
             xmlns:converters="clr-namespace:Tumirai.Converters"
             x:Class="Tumirai.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>

            <Color x:Key="Gray50">#FAFAFA </Color>
            <Color x:Key="Gray950">#212121</Color>
            <Color x:Key="Gray200">#EEEEEE</Color>
            <Color x:Key="Primary">#6200EE</Color>
            <Color x:Key="PrimaryLight">#BB86FC</Color>
            <Color x:Key="TitleTextColor">#FFFFFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
